<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>S-Emulator Server</display-name>
    
    <!-- User Management Servlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>se.emulator.server.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/users/*</url-pattern>
    </servlet-mapping>
    
    <!-- Program Management Servlet -->
    <servlet>
        <servlet-name>ProgramServlet</servlet-name>
        <servlet-class>se.emulator.server.ProgramServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProgramServlet</servlet-name>
        <url-pattern>/api/programs/*</url-pattern>
    </servlet-mapping>
    
    <!-- Function Management Servlet -->
    <servlet>
        <servlet-name>FunctionServlet</servlet-name>
        <servlet-class>se.emulator.server.FunctionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FunctionServlet</servlet-name>
        <url-pattern>/api/functions/*</url-pattern>
    </servlet-mapping>
    
    <!-- Execution Servlet -->
    <servlet>
        <servlet-name>ExecutionServlet</servlet-name>
        <servlet-class>se.emulator.server.ExecutionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExecutionServlet</servlet-name>
        <url-pattern>/api/execution/*</url-pattern>
    </servlet-mapping>
    
    <!-- Chat Servlet -->
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>se.emulator.server.ChatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/api/chat/*</url-pattern>
    </servlet-mapping>
    
    <!-- CORS Filter for cross-origin requests -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>se.emulator.server.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
</web-app>
